@model Assignment2.Models.Users;

<script>
    function checkinput() {
       
        if (document.getElementById('EmailAddress').value == "") {
            alert('please enter your EmailAddress');
            document.getElementById('EmailAddress').style.borderColor = "red";
            return false;
        }

        if (document.getElementById('Password').value == "") {
            alert('please enter Password');
            document.getElementById('Password').style.borderColor = "red";
            return false;
        }
    }
</script>

<div class="container" role="main">

    <div class="page-header">
        <h2>Login</h2>
    </div>

    <form asp-controller="Home" asp-action="UserLogin" method="post" onsubmit="return checkinput()">
        
        <div class="form-group">
            <label for="EmailAddress">Email Address</label>
            <input class="form-control" type="email" data-val="true" id="EmailAddress" name="EmailAddress" value="" ) />
            <span class="text-danger field-validation-valid" data-valmsg-for="EmailAddress" data-valmsg-replace="true"></span>

        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input class="form-control" type="text" data-val="true" id="Password" name="Password" value="" />
            <span class="text-danger field-validation-valid" data-valmsg-for="User.Password" data-valmsg-replace="true"></span>

        </div>

        <br />
        <input type="submit" value="Login Now" class="btn btn-default" />
    </form>
</div>
